                    <% } %>
                    <% } else { %>
                    <% if (posts[i].postData.editPost) { %>
                    <a href="/redigera-inlagg/<%= encodeURIComponent(customURLEncode(topic.topic_title)) %>-<%= posts[i].post_id %>"><i
