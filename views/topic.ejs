    <div class="tag-wrapper">
        <%
        for (var i = 0; i < topic.topic_tags.length; i++)
        {
        %>
        <span class="tag"
              style="background-color: <%= topic.topic_tags[i].tag_bg_color %>; color: <%= topic.topic_tags[i].tag_text_color %>;"><%= topic.topic_tags[i].tag_text %></span>
        <%
        } %>
    </div>
    <% } %>
